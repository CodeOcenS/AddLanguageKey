{
  "manifest_version": 3,
  "name": "AddLanguageKey",
  "version": "1.0.0",
  "description": "在 Axure 需求中添加多语言 Key",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "http://*.axshare.com/*",
    "https://*.axshare.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*.axshare.com/*",
         "https://*.axshare.com/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ]
}